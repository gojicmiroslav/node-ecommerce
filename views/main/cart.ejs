<% layout('layout') -%>

<div class="container">
	<div class="row">
		<div class="col-lg-6">
			<% if(message.length > 0) { %>
				<div class="alert alert-success alert-dismissible" role="alert">
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
  						<span aria-hidden="true">&times;</span>
					</button>
					<%= message %>
				</div>
			<% } %>	

			<% foundCart.items.forEach(function(item){ %>
				<div class="list-group">
					<span class="list-group-item">
						<div class="row">
							<div class="col-md-3">
								<span><img class="product-image" src="<%= item.item.image %>" /></span>
							</div>

							<div class="col-md-6">
								<p class="list-group-item-heading"><%= item.item.name %></p>
							</div>

							<div class="col-md-3">
								<p>Quantity: <%= item.quantity %></p>
								<p>Price: <%= item.price %></p>

								<form method="post" action="/remove">
									<input type="hidden" name="item" value="<%= item._id %>" />
									<input type="hidden" name="price" value="<%= item.price %>" />
									<button type="submit" type="button" class="btn btn-danger">Remove</button>
								</form>
							</div>
						</div>
					</span>
				</div>
			<% }) %>
		</div>

		<div class="col-lg-3"></div>

		<div class="col-md-3">
			<div class="list-group">
				<span class="list-group-item">
					<h4>Total: <span class="totalPrice">$<%= foundCart.total %></span></h4>
					<div class="form-group">
						<input type="hidden" value="<%= foundCart.total %>" />
						<button type="submit" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" <%= foundCart.total > 0 ? "enabled" : "disabled" %>>Pay with Stripe</button>
					</div>
				</span>
			</div>
		</div>
	</div>

	<div class="row">
		
	</div>
</div>