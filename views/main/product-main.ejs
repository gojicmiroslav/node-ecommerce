<% layout('layout') -%>

<div class="jumbotron" id="navbar-gap">
  <div class="container">
    <h1 class="text-center">Find your favourite product!</h1>
    <p class="text-center">Search many of Ecommerce's products</p>
    
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="input-group input-group-lg col-md-12">
  				<input type="text" id="search" class="form-control input-lg" placeholder="Search for a Product..." >
					<span class="input-group-btn">
						<button type="submit" class="btn btn-primary">
							<span class="glyphicon glyphicon-search" aria-hidden="true"></span>
						</button>
					</span>
				</div>
			</div>
		</div>

  </div>
</div>

<div class="container">
	<div class="row" id="searchResults">
		<% products.forEach(function(product){ %>	
			<div class="col-md-4">
				<a href="/product/<%= product._id %>">
					<div class="thumbnail">
						<img src="<%= product.image %>" />
						<div class="caption">
							<h3><%= product.name %></h3>
							<p><%= product.category.name %></p>
							<p>$<%= product.price %></p>
						</div>
					</div>
				</a>
			</div>
		<% }) %>

		<ul class="pagination text-center">
			<% for(var i = 1; i <= pages; i++) { %>
				<% if(i === 1) { %>
					<li><a href="/"><%= i %></a></li>
				<% } else { %>
					<li><a href="/page/<%= i %>"><%= i %></a></li>
				<% } %>	
			<% } %>	
		</ul>

	</div><!-- row -->
</div><!-- container -->